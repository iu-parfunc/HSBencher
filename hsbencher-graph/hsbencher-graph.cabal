-- Initial hsbencher-fusion.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                hsbencher-graph
version:             0.2
synopsis:            Command line tool for plotting hsbencher data from CSV files.
description:         This tool reads CSV files and uses the Haskell Chart library to
                     produce plots.

license:             MIT
-- license-file:        LICENSE
author:              Ryan Newton, Joel Svensson
maintainer:          rrnewton@gmail.com
-- copyright:           
-- category:            
build-type:          Simple
cabal-version:       >=1.10

flag chart
  description: Enable use of the Chart plotting library.  Otherwise
               this tool can only be used for CSV output.
  default: False
  manual: True

-- The hsbencher command line tool:
executable hsbencher-graph
  main-is: Main.hs
--  extra-source-files: template.gpl
  default-language: Haskell2010
  build-depends: base >=4.5 && < 4.8
               , filepath >= 1.0
               , deepseq
               , lens >= 4.2 && < 4.7
               , data-default-class >= 0.0.1 && < 0.1
               , colour >= 2.3.3 && < 2.4
               , split 
               , MissingH >= 1.2.1.0 && < 1.3
               , containers >= 0.5.5.1
               , csv >= 0.1
            --   , hsbencher >= 1.8.0.13
            --   , hsbencher-fusion >= 0.1.0.3 
            --   , simple-sql-parser >= 0.4.0 && < 0.5
            --   , split 
            --   , MissingH >= 1.2.1.0 && < 1.3
  if flag(chart)
     cpp-options: -DUSECHART
     build-depends: Chart >= 1.3.1 
                  , Chart-cairo >= 1.3.1
                  , Chart-diagrams >= 1.3.1 
